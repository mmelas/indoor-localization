<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/titleTest"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Locate Me"
        android:textSize="20dp" />
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_weight="0.4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <TextView
            android:id="@+id/tvLivingRoom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#D3D3D3"
            android:text="Living Room"
            android:textColor="#000000"
            android:gravity="center_horizontal"
        />
        <TextView
            android:id="@+id/tvKitchen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="110dp"
            android:gravity="center_horizontal"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="Kitchen" />
        <TextView
            android:id="@+id/tvToilet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="220dp"
            android:gravity="center_horizontal"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="Toilet" />
        <TextView
            android:id="@+id/tvBedroom1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="Bedroom1" />
        <TextView
            android:id="@+id/tvBedroom2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="110dp"
            android:gravity="center_horizontal"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="Bedroom2" />
        <TextView
            android:id="@+id/tvBalcony"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="220dp"
            android:gravity="center_horizontal"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="Balcony" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textTest"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_weight="0.6"
        android:scrollbars = "vertical"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center|top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/buttonCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="Cross-V" />
        <Button
            android:id="@+id/buttonTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="Locate" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>