<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#252525"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="20dp" >
    <TextView
        android:id="@+id/titleDataCtrl"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Data Control"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonExpRaw"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#CA3E47"
            android:text="Export Raw" />

        <Button
            android:id="@+id/buttonImpRaw"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="0dp"
            android:background="#CA3E47"
            android:text="Import Raw" />

        <Button
            android:id="@+id/buttonExpDict"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="170dp"
            android:background="#CA3E47"
            android:text="Export Dict" />

        <Button
            android:id="@+id/buttonClearData"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="170dp"
            android:background="#CA3E47"
            android:text="Erase" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="220dp" />

    <TextView
        android:id="@+id/textDataStat"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffffff" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

</LinearLayout>